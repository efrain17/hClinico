<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ec.com.altura.aclient.DetalleFactura"
    tools:showIn="@layout/activity_detalle_factura"
    android:padding="0dp">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/rlm_img_lef"
        android:layout_weight="0.17"
        android:src="@android:mipmap/sym_def_app_icon"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="FAC. Nº 1115144051"
        android:id="@+id/txtServicio"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:textColor="#5161bb"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/rlm_img_lef" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Fecha Emisión"
        android:id="@+id/rlm_eti_dir"
        android:layout_below="@+id/txtServicio"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/rlm_img_lef" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="12/1/2016"
        android:id="@+id/txtDireccion"
        android:layout_below="@+id/rlm_eti_dir"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-2dp"
        android:layout_toRightOf="@+id/rlm_img_lef" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Fecha Vencimiento"
        android:id="@+id/rlm_eti_nom"
        android:layout_below="@+id/txtDireccion"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/rlm_img_lef" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="24/2/2016"
        android:id="@+id/txtTitular"
        android:layout_below="@+id/rlm_eti_nom"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="-2dp"
        android:layout_toRightOf="@+id/rlm_img_lef" />
    <View
        android:id="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#e0e0e0"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtTitular"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
  <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChart"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="43dp"
        android:layout_below="@+id/textSaldo"
      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MSG"
        android:id="@+id/textView22"
        android:layout_gravity="right"
        android:textColor="@color/md_green_700"
        android:textSize="18dp"
        android:layout_below="@+id/line2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="correcto"
        android:id="@+id/textSaldo"
        android:layout_gravity="right"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp"
        android:layout_below="@+id/textView22" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estado"
        android:id="@+id/textView24"
        android:layout_gravity="right"
        android:textColor="@color/md_green_700"
        android:textSize="18dp"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/textView22" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="***"
        android:id="@+id/textMonto"
        android:layout_gravity="right"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp"
        android:layout_below="@+id/textView24"
        android:layout_alignRight="@+id/textView24"
        android:layout_alignEnd="@+id/textView24" />

</RelativeLayout>
